@using Employee_Management_System.Dtos
@model ViewEmployeeDto

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Employee</h2>
            <hr />
        </div>

        <div class="row mb-3">

            <div class=" col mb-3">
                <label asp-for="EmployeeName"></label>
                <input asp-for="EmployeeName" class="form-control rounded-4" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>

            <div class=" col mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control rounded-4" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
        <div class="row mb-3">

            <div class="col mb-3">
                <label>Address</label>
                <input asp-for="Address" class="form-control rounded-4" />
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>
            <div class="col mb-3">
                <label>Department</label>
                <input asp-for="Department" class="form-control rounded-4" />
                <span asp-validation-for="Department" class="text-danger"></span>

            </div>
            <div class="col mb-3">
                <label>Position</label>
                <input asp-for="Position" class="form-control rounded-4" />
                <span asp-validation-for="Position" class="text-danger"></span>

            </div>
            <div class="col mb-3">
                <label>Salary</label>
                <input asp-for="Salary" class="form-control rounded-4" type="number" step="any" />
                <span asp-validation-for="Salary" class="text-danger"></span>

            </div>
        </div>
        <button class=" btn btn-primary " type="submit" style="width:150px">Update</button>
        <a asp-controller="Home" asp-action="Index" class=" btn btn-secondary " style="width:150px">Back</a>
    </div>
</form>