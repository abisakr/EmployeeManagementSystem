@using Employee_Management_System.Dtos
@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ViewEmployeeDto>
<h1 class="text-center text-primary">Employee Management System</h1>
<div class="border container p-3 mt-4">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employees</h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Employee" asp-action="AddEmployee" class="btn btn-primary "> <i class="bi bi-plus-circle"></i>  Add Employee</a>
        </div>
    </div>
    <hr />
    <table id="example" class="table table-bordered table-striped " style="width:100%">
        <thead class="table-bordered">
            <tr>
                <th>
                    EmployeeId
                </th>
                <th>
                    EmployeeName
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Department
                </th>
                <th>
                    Position
                </th>
                <th>
                    Salary
                </th>
                <th>
                    RegisteredDate
                </th>
                @if (Model != null && Model.Any())
                {
                    <th>
                        Action
                    </th>
                }
                
            </tr>
        </thead>
        <tbody class="table-bordered">
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="9" class="text-center">No Employees Yet</td>
                </tr>
            }  else
                {
                   
            @foreach (var obj in Model)
            {
               
                <tr>
               
                    <td width="20%">
                        @obj.EmployeeId

                    </td>
                    <td width="30%">
                        @obj.EmployeeName

                    </td>
                    <td width="50%">
                        @obj.Email

                    </td>
                    <td width="50%">
                        @obj.Address

                    </td>
                    <td width="50%">
                        @obj.Department

                    </td>
                   
                    @if (obj.Position == null)
                    {
                        <td width="50%">
                            Not Mentioned

                        </td>
                    }
                    else
                    {
                        <td width="50%">
                            @obj.Position

                        </td>
                    }
               
                    <td width="50%">
                        @obj.Salary

                    </td>
                    <td width="50%">
                        @obj.CreatedAt

                    </td>


                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@obj.EmployeeId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@obj.EmployeeId" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
            }
        </tbody>
    </table>
</div>
